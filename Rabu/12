import turtle
# Dimensi jajar genjang
panjang = 200  # Panjang sisi bawah dan atas
tinggi = 100   # Tinggi jajar genjang
kemiringan = 50  # Panjang sisi miring
# Setup turtle
turtle.speed(3)
turtle.color("green")  # Warna garis
turtle.fillcolor("lightgreen")  # Warna isi
turtle.bgcolor("white")  # Latar belakang
# Menggambar jajar genjang
turtle.begin_fill()
# Sisi bawah
turtle.forward(panjang)
# Sisi miring kanan
turtle.left(120)  # Sudut kemiringan
turtle.forward(kemiringan)

# Sisi atas
turtle.left(60)
turtle.forward(panjang)
# Sisi miring kiri
turtle.left(120)
turtle.forward(kemiringan)
turtle.end_fill()

# Menyelesaikan program
turtle.done()
