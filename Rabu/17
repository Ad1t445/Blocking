import turtle

# Dimensi segilima
sisi = 100

# Setup turtle
turtle.speed(3)
turtle.color("purple")  # Warna garis ungu
turtle.fillcolor("purple")  # Warna isi ungu
turtle.bgcolor("white")  # Latar belakang putih

# Menggambar segilima
turtle.begin_fill()
for _ in range(5):
    turtle.forward(sisi)
    turtle.left(72)  # Sudut untuk segilima adalah 72 derajat
turtle.end_fill()

# Menyelesaikan program
turtle.done()
